// Mostrar/ocultar formularios de pago
const formTarjeta = document.getElementById("formTarjeta");
const formTransferencia = document.getElementById("formTransferencia");
const formOxxo = document.getElementById("formOxxo");

document.querySelectorAll("input[name='pago']").forEach(radio => {
    radio.addEventListener("change", () => {
        const metodo = radio.value;

        formTarjeta.classList.add("hidden");
        formTransferencia.classList.add("hidden");
        formOxxo.classList.add("hidden");

        if (metodo === "tarjeta") formTarjeta.classList.remove("hidden");
        if (metodo === "transferencia") formTransferencia.classList.remove("hidden");
        if (metodo === "oxxo") formOxxo.classList.remove("hidden");
    });
});


// Guardar datos en localStorage
function guardarDatos() {
    const datos = {
        nombre: document.getElementById("nombre").value,
        direccion: document.getElementById("direccion").value,
        ciudad: document.getElementById("ciudad").value,
        estado: document.getElementById("estado").value,
        cp: document.getElementById("cp").value,
        telefono: document.getElementById("telefono").value,
        notas: document.getElementById("notas").value
    };

    localStorage.setItem("envioDatos", JSON.stringify(datos));
    alert("Datos guardados correctamente.");
}

// Cargar datos guardados
function cargarDatos() {
    const datos = JSON.parse(localStorage.getItem("envioDatos"));
    if (!datos) return alert("No hay datos guardados.");

    document.getElementById("nombre").value = datos.nombre;
    document.getElementById("direccion").value = datos.direccion;
    document.getElementById("ciudad").value = datos.ciudad;
    document.getElementById("estado").value = datos.estado;
    document.getElementById("cp").value = datos.cp;
    document.getElementById("telefono").value = datos.telefono;
    document.getElementById("notas").value = datos.notas;

    alert("Datos recuperados.");
}

